<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_remedy_patient_search" model="ir.ui.view">
        <field name="name">remedy.patient.search</field>
        <field name="model">remedy.patient</field>
        <field name="arch" type="xml">
            <search>
                <!-- filter domain is for search through multiple fields. -->
                <!-- Below one is for 3 fields -->
                <!-- "['|', '|', ('name', 'ilike', self), ('ref', 'ilike', self), ('ref', 'ilike', self)]" -->
                <field name="name" string="Patient Name"
                       filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]"/>
                <field name="ref" string="Reference"/>
            </search>
        </field>
    </record>

    <record id="view_remedy_patient_tree" model="ir.ui.view">
        <field name="name">remedy.patient.tree</field>
        <field name="model">remedy.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="ref"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_remedy_patient_form" model="ir.ui.view">
        <field name="name">remedy.patient.form</field>
        <field name="model">remedy.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="ref"/>
                            <field name="gender"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_remedy_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">remedy.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create our first patient !
            </p>
        </field>
    </record>

    <menuitem id="menu_patient"
              name="Patient"
              action="action_remedy_patient"
              parent="menu_patient_master"
              sequence="0"/>
</odoo>